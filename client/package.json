{
    "name": "client",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "eject": "react-scripts eject",
        "test": "react-scripts test",
        "test:ci": "CI=true react-scripts test --env=jsdom",
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "coverage": "react-scripts test --env=jsdom --coverage",
        "coverage:ci": "CI=true react-scripts test --env=jsdom --coverage && cat coverage/lcov.info",
        "debug:chrome": "google-chrome --remote-debugging-port=9222",
        "docs": "typedoc --out docs ./src",
        "link-contracts": "run-script-os",
        "link-contracts:linux:darwin": "cd src && ln -s ../../ethereum/build/contracts contracts",
        "link-contracts:win32": "cd src && mklink \\D contracts ..\\..\\ethereum\\build\\contracts"
    },
    "dependencies": {
        "@types/cryptr": "4.0.0",
        "@types/jest": "24.0.11",
        "@types/node": "11.13.4",
        "@types/react": "16.8.13",
        "@types/react-dom": "16.8.4",
        "@types/react-router-dom": "4.3.2",
        "@types/recharts": "1.1.17",
        "@types/styled-components": "4.1.16",
        "bignumber.js": "8.1.1",
        "cryptr": "4.0.2",
        "ipfs-http-client": "32.0.1",
        "react": "16.8.6",
        "react-dom": "16.8.6",
        "react-router-dom": "5.0.1",
        "react-scripts": "3.0.1",
        "recharts": "1.6.2",
        "rimble-ui": "0.9.4",
        "styled-components": "4.3.2",
        "typescript": "3.4.3",
        "universal-cookie": "4.0.1",
        "uport-connect": "1.1.11",
        "web3": "1.0.0-beta.37"
    },
    "devDependencies": {
        "@types/enzyme": "3.9.3",
        "@types/enzyme-adapter-react-16": "1.0.5",
        "coveralls": "3.0.3",
        "delay": "4.2.0",
        "enzyme": "3.9.0",
        "enzyme-adapter-react-16": "1.12.1",
        "eslint": "5.16.0",
        "eslint-config-airbnb": "17.1.0",
        "eslint-plugin-import": "2.17.2",
        "eslint-plugin-jsx-a11y": "6.2.1",
        "eslint-plugin-react": "7.13.0",
        "jest": "24.7.1",
        "run-script-os": "1.0.5",
        "tslint": "5.16.0",
        "tslint-react": "4.0.0",
        "typescript-tslint-plugin": "0.3.1"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!./node_modules/",
            "!src/App.tsx",
            "!src/*.{ts,tsx}",
            "!src/utils/**.ts"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
